    "emailOrMobile":{
        "label": "Email or Mobile number"
    },
    "password": {
        "label": "Password",
        "validators": {
            "required": ""
        },
        "error": {
            "required": "Password is required"
        }
    },
    "using": {
        "label": "Use"
    },
    "showPassword": {
        "label": ""
